# ===========================================
# Supabase Configuration
# ===========================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# SERVER-SIDE ONLY - Keep this secret!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# Blockchain Configuration (Polygon)
# ===========================================
# Network: 137 = Polygon Mainnet, 80001 = Mumbai Testnet
NEXT_PUBLIC_CHAIN_ID=80001

# Smart Contract Addresses (deployed contracts)
NEXT_PUBLIC_LOAN_CONTRACT_ADDRESS=0x...
NEXT_PUBLIC_DISBURSEMENT_CONTRACT_ADDRESS=0x...

# WalletConnect Project ID
# Get from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# ===========================================
# Contract Deployment (SERVER-SIDE ONLY)
# ===========================================
# WARNING: Never commit your private key!
PRIVATE_KEY=0x...

# RPC URLs for deployment
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_RPC_URL=https://polygon-rpc.com

# Block Explorer API Key (for verification)
POLYGONSCAN_API_KEY=your-polygonscan-api-key

# ===========================================
# External API Keys
# ===========================================
# KYC Verification Provider
# Options: Onfido, Jumio, Persona
KYC_API_KEY=your-kyc-api-key
KYC_API_SECRET=your-kyc-api-secret
KYC_PROVIDER=placeholder # or 'onfido', 'jumio', 'persona'

# Credit Score API
# Options: Experian, Equifax, local provider
CREDIT_API_KEY=your-credit-api-key
CREDIT_API_SECRET=your-credit-api-secret
CREDIT_PROVIDER=placeholder # or 'experian', 'equifax', 'custom'

# ===========================================
# Feature Flags
# ===========================================
NEXT_PUBLIC_ENABLE_BLOCKCHAIN=true
NEXT_PUBLIC_ENABLE_AUTO_APPROVAL=true
NEXT_PUBLIC_ENABLE_KYC_VERIFICATION=true
NEXT_PUBLIC_ENABLE_CREDIT_CHECKS=true

# ===========================================
# Development Settings
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Analytics & Monitoring (Optional)
# ===========================================
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id
